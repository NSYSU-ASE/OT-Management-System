@{
    ViewData["Title"] = "資產管理儀表板";
}

<h2 class="text-center mt-4">資產管理儀表板</h2>

<!-- 顯示和隱藏區塊的選項 -->
<div class="container mt-3">
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="showAssetSummary" checked>
        <label class="form-check-label" for="showAssetSummary">顯示資產摘要卡片</label>
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="showAssetCharts" checked>
        <label class="form-check-label" for="showAssetCharts">顯示資產總覽圖表</label>
    </div>
</div>

<!-- 使用 Gridstack 創建可拖動的區塊 -->
<div class="grid-stack mt-4">
    <!-- 資產摘要卡片區塊 -->
    <div class="grid-stack-item" data-gs-width="6" data-gs-height="2" id="assetSummaryBlock">
        <div class="grid-stack-item-content">
            @Html.Partial("_AssetSummaryCards")
        </div>
    </div>

    <!-- 資產總覽圖表區塊 -->
    <div class="grid-stack-item" data-gs-width="6" data-gs-height="3" id="assetChartsBlock">
        <div class="grid-stack-item-content">
            @Html.Partial("_AssetCharts")
        </div>
    </div>
</div>

<script>
    $(function () {
        // 初始化 Gridstack，讓每個區塊可以拖放和縮放
        var grid = GridStack.init({
            cellHeight: '150px',
            animate: true
        });

        // 使用者勾選顯示或隱藏區塊的事件
        $('#showAssetSummary').change(function () {
            if (this.checked) {
                $('#assetSummaryBlock').show();
            } else {
                $('#assetSummaryBlock').hide();
            }
        });

        $('#showAssetCharts').change(function () {
            if (this.checked) {
                $('#assetChartsBlock').show();
            } else {
                $('#assetChartsBlock').hide();
            }
        });
    });
</script>