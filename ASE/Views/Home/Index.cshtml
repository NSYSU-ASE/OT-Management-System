@{
    ViewData["Title"] = "資產管理儀表板";
}

<h2 class="text-center mt-4">資產管理儀表板</h2>

<!-- 嵌入工廠選擇模組 -->
@Html.Partial("_FactorySelector")


<!-- 嵌入日期選擇模組 -->
@Html.Partial("_DateRangePicker")




<!-- 顯示和隱藏區塊的選項 -->
<div class="container mt-3">
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="showAssetSummary" checked>
        <label class="form-check-label" for="showAssetSummary">摘要卡片</label>
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="showAssetCharts" checked>
        <label class="form-check-label" for="showAssetCharts">總覽圖表</label>
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="showEventStatus" checked>
        <label class="form-check-label" for="showEventStatus">事件總覽</label>
    </div>
</div>

<!-- 嵌入資產摘要卡片 -->
<div id="assetSummarySection">
    @Html.Partial("_AssetSummaryCards")
</div>

<!-- 嵌入資產總覽圖表 -->
<div id="assetChartsSection">
    @Html.Partial("_AssetCharts")
</div>

<!-- 嵌入事件與等級 -->
<div id="assetChartsSection">
    @Html.Partial("_EventStatus")
</div>

<script>
    $(document).ready(function () {
        // 使用者勾選顯示或隱藏資產摘要卡片區塊
        $('#showAssetSummary').change(function () {
            console.log("Toggle Asset Summary: " + this.checked);
            if (this.checked) {
                $('#assetSummarySection').show();
            } else {
                $('#assetSummarySection').hide();
            }
        });

        // 使用者勾選顯示或隱藏資產總覽圖表區塊
        $('#showAssetCharts').change(function () {
            console.log("Toggle Asset Charts: " + this.checked);
            if (this.checked) {
                $('#assetChartsSection').show();
            } else {
                $('#assetChartsSection').hide();
            }
        });

        // 使用者勾選顯示或隱藏事件總覽區塊
        $('#showEventStatus').change(function () {
            console.log("Toggle Event Status: " + this.checked);
            if (this.checked) {
                $('#showEventStatus').show();
            } else {
                $('#showEventStatus').hide();
            }
        });
    });
</script>